// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Member {
  id Int @id @default(autoincrement())
  createdDate DateTime @default(now())
  team Team? @relation(fields: [teamId], references: [id])
  teamId Int?
  summoner Summoner? @relation(fields: [summonerId], references: [id])
  summonerId String?
  scrim Scrim? @relation(fields: [scrimId], references: [id])
  scrimId Int?
}

model Team {
  id Int @id @default(autoincrement())
  name String?
  members Member[]
  scrim Scrim? @relation(fields: [scrimId], references: [id])
  scrimId Int?
}

model Summoner {
  id String @id
  name String
  rank Int
  level Int
  icon Int
  roles String?
  members Member[]
  user User? @relation(fields: [userId], references: [id])
  userId Int? @unique
}

model Scrim {
  id Int @id @default(autoincrement())
  autoDraft Boolean @default(false)
  autoBalance Boolean @default(false)
  coinflipWinner Int?
  createdDate DateTime @default(now())
  firstDraftId Int?
  host User @relation(fields: [hostId], references: [id])
  hostId Int
  isPrivate Boolean @default(true)
  pool Member[]
  sidePickId Int?
  step String @default("pool")
  teams Team[]
  teamSize Int @default(5)
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String?
  name String?
  summoner Summoner?
  scrims Scrim[]
}
